# StegMage Environment Configuration
# Copy this file to .env and configure for your deployment

# Flask Secret Key (REQUIRED in production - use a strong random key)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Authentication Password (REQUIRED for security)
# Option 1: Use plain password (will be hashed automatically)
AUTH_PASSWORD=your-strong-password-here

# Option 2: Use pre-hashed password (SHA256) - more secure
# Generate with: echo -n "your-password" | sha256sum
# AUTH_PASSWORD_HASH=your-sha256-hash-here

# Security Settings (REQUIRED in production)
FORCE_HTTPS=true
ALLOWED_ORIGINS=https://yourdomain.com

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Debug Mode (NEVER enable in production)
DEBUG=false

# Server Port
PORT=8080
